{
  "name": "whoops",
  "version": "1.0.0",
  "description": "Whoops Desktop App",
  "main": "main.js",
  "author": "Whoops",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac dmg",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.whoops.app",
    "productName": "Whoops",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "ouinsurinternet",
      "repo": "whoops-app"
    },
    "mac": {
      "category": "public.app-category.social-networking",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Whoops a besoin d'accéder au microphone pour les appels vocaux.",
        "NSCameraUsageDescription": "Whoops a besoin d'accéder à la caméra pour les appels vidéo.",
        "NSScreenCaptureDescription": "Whoops a besoin d'accéder à l'écran pour le partage d'écran."
      }
    },
    "dmg": {
      "title": "Whoops",
      "backgroundColor": "#0a0a0a",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "build/icon.png",
      "target": "AppImage"
    }
  }
}
